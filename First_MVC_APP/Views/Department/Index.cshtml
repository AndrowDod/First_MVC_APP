@model IEnumerable<DepartmentViewModel>

@{
    ViewData["Title"] = "Departments";
}


<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold text-primary">Departments List</h2>
        <a asp-controller="Department" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Add Department
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>@Html.DisplayNameFor(D => D.Code)</th>
                        <th>@Html.DisplayNameFor(D => D.Name)</th>
                        <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var Dept in Model)
                    {
                        <tr>
                            <td>@Dept.Code</td>
                            <td>@Dept.Name</td>
                            <td>@Dept.DateOfCreation.ToShortDateString()</td>

                            <partial name="_BottonsPartial" model="Dept.Id.ToString()" />

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center shadow-sm mt-4">
            <i class="fas fa-exclamation-circle"></i> No Departments found.
        </div>
    }
</div>
