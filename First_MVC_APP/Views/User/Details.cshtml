@model UserViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-3" style="max-width: 600px; width:100%;">
        <div class="card-body text-center">
            <!-- صورة افتراضية -->
       
            <h3 class="fw-bold text-dark">@Model.FName</h3>
            <p class="text-muted">User Information</p>

            <hr />
            <div class="row text-start mb-3">
                <div class="col-6">
                    <strong>Fisrt Name:</strong>
                    <p>@Model.FName</p>
                </div>
                <div class="col-6">
                    <strong>Last Name:</strong>
                    <p>@Model.LName</p>
                </div>
            </div>

            <div class="row text-start mb-3">
                <div class="col-6">
                    <strong>Phone:</strong>
                    <p>@Model.PhoneNumber</p>
                </div>
                <div class="col-6">
                    <strong>Email:</strong>
                    <p>@Model.Email</p>
                </div>
            </div>

            <div class="row text-start mb-3">
                <div class="col-6">
                    <strong>Roles:</strong>
                    <p>@(Model.Roles != null ? String.Join(" , ", Model.Roles) : "")</p>
                </div>
              
            </div>

            <hr />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>


