@model UserViewModel
@{
    ViewData["Title"] = "Edit";
}


<div class="container py-5">
    <div class="col-lg-8 mx-auto">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-header bg-dark text-white rounded-top-4">
                <h4 class="mb-0">✏️ Edit User</h4>
            </div>

            <form asp-action="Edit" class="card-body p-4">

                <div asp-validation-summary="All" class="alert alert-danger mb-4"></div>

                <!-- Fisrt Name -->
                <div class="col-md-6">
                    <label asp-for="FName" class="form-label fw-bold"></label>
                    <input asp-for="FName" class="form-control" placeholder="Enter Fisrt name" />
                    <span asp-validation-for="FName" class="text-danger"></span>
                </div>

                <!-- Last Name -->
                <div class="col-md-6">
                    <label asp-for="LName" class="form-label fw-bold"></label>
                    <input asp-for="LName" class="form-control" placeholder="Enter Last Name" />
                    <span asp-validation-for="LName" class="text-danger"></span>
                </div>

                <!-- Email -->
                <div class="col-md-12">
                    <label asp-for="Email" class="form-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" placeholder="Enter Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Phone Number -->
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label fw-bold"></label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>


                <!-- Roles -->
                <div class="col-md-6">
                    <label asp-for="Roles" class="form-label fw-bold"></label>
                    <input asp-for="Roles" class="form-control" placeholder="Enter User Roles" />
                    <span asp-validation-for="Roles" class="text-danger"></span>
                </div>

                <!-- Buttons -->
                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-dark px-4 rounded-3">💾 Save</button>
                    <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-3">↩ Back</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section ValidatoinScriptSection {
    <partial name="_ValidationScriptsPartial" />
}



