@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "Index";
}


    <div class="row justify-content-center align-items-center mt-5">
        <form class="row col-8 offset-2">
            <div class="col-8">
                <input type="text" class="form-control" name="email" placeholder="Search By email" />
            </div>
            <div class="col-4">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </form>
    </div>

<div class="container mt-4">
    @if (Model.Any())
    {
        <div class="table-responsive shadow-sm rounded">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                    <th>@Html.DisplayNameFor(U => U.Id)</th>
                    <th>@Html.DisplayNameFor(U => U.FName)</th>
                    <th>@Html.DisplayNameFor(U => U.LName)</th>
                    <th>@Html.DisplayNameFor(U => U.Email)</th>
                    <th>@Html.DisplayNameFor(U => U.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(U => U.Roles)</th>
                   
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                        <td>@user.Id</td>
                        <td>@user.FName</td>
                        <td>@user.LName</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@String.Join(" ", user.Roles)</td>
                            
                            <partial name="_BottonsPartial" model="user.Id" />

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center shadow-sm mt-4">
            <i class="fas fa-exclamation-circle"></i> No Users found.
        </div>
    }
</div>


