@model EmployeeViewModel

@inject IUnitOfWork unitOfWork

@{
    ViewData["Title"] = "Employee Details";

    var departmentName = Model.DepartmentId != null
         ? unitOfWork.DepartmentRepository.GetById((int)Model.DepartmentId)?.Name
         : "No Department";
  
}


<div class="container mt-5 d-flex justify-content-center">
    <div class="card shadow-lg border-0 rounded-3" style="max-width: 600px; width:100%;">
        <div class="card-body text-center">
            <!-- صورة افتراضية -->
            <div class="row mb-3">
                <div class="col-12 text-center">
                    <div class="mt-2 d-flex justify-content-center">
                        <img src="~/files/images/@Model.ImageName"
                             width="100"
                             class="img-fluid rounded-circle shadow-sm"
                             style="object-fit: cover;" />
                    </div>
                </div>
            </div>

            <h3 class="fw-bold text-dark">@Model.Name</h3>
            <p class="text-muted">Employee Information</p>

            <hr />

           


         

            <div class="row text-start mb-3">
                <div class="col-6">
                    <strong>Age:</strong>
                    <p>@Model.Age</p>
                </div>
                <div class="col-6">
                    <strong>Salary:</strong>
                    <p>@Model.Salary.ToString("C")</p>
                </div>
            </div>

            <div class="row text-start mb-3">
                <div class="col-6">
                    <strong>Phone:</strong>
                    <p>@Model.PhoneNumber</p>
                </div>
                <div class="col-6">
                    <strong>Email:</strong>
                    <p>@Model.Email</p>
                </div>
            </div>

            <div class="row text-start mb-3">
                <div class="col-6">
                    <strong>Address:</strong>
                    <p>@Model.Address</p>
                </div>
                <div class="col-6">
                    <strong>Hiring Date:</strong>
                    <p>@Model.HiringDate.ToString("dd MMM yyyy")</p>
                </div>
            </div>

            <div class="row text-start mb-3">
                <div class="col-6">
                    <strong>Status:</strong>
                    @if (Model.IsActive)
                    {
                        <span class="badge bg-success">Active</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Inactive</span>
                    }
                </div>

                <div class="col-6">
                    <strong>Department:</strong>
                    <p>@departmentName </p>
                </div>
            </div>

         

            <hr />

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="fas fa-edit"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>
