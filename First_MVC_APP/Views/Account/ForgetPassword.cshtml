@model ForgetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="wrapper">
    <div asp-validation-summary="All"></div>

    <form asp-action="SendResetPasswordUrl">
        <h2>Reset password</h2>

        <div class="input-field">
            <input asp-for="Email" required>
            <label>Enter your email</label>
            <span asp-validation-for="Email" class="text-light"></span>
        </div>


        <button type="submit">Send</button>
  
    </form>
</div>

@section ValidatoinScriptSection {
    <partial name="_ValidationScriptsPartial" />
}


