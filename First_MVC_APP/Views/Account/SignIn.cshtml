@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}


<div class="wrapper">
    <div asp-validation-summary="All"></div>

    <form asp-action="SignIn">
        <h2>Sign In</h2>

        <div class="input-field">
            <input asp-for="Email" required>
            <label>Enter your email</label>
            <span asp-validation-for="Email" class="text-light"></span>
        </div>

        <div class="input-field">
            <input asp-for="Password" required>
            <label>Enter your password</label>
            <span asp-validation-for="Password" class="text-light"></span>

        </div>

        <div class="signup-text ">
            <label for="IsAgree">
                <input asp-for="RememberMe" id="RememberMe">
                <p>Remember Me</p>
            </label>
        </div>

        <div class="signup-text">
            <p><a asp-action="ForgetPassword">Forget Passworrd?</a></p>
        </div>

        <br />

        <button type="submit">LogIn</button>
        <div class="signup-text" >
            <p>Don't have an account? <a asp-action="SignUp" >SignUp</a></p>
        </div>
    </form>
</div>

@section ValidatoinScriptSection {
    <partial name="_ValidationScriptsPartial" />
}



